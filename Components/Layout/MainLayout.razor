@using MudBlazor
@using MudBlazor.Services
@using MudBlazor.Components

@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />

    <MudLayout>
        <MudAppBar>
            <MudIconButton Icon="Icons.Material.Filled.Menu" Edge="Edge.Start" />
            <MudText Typo="Typo.h6" Class="ms-2">Alban's Portfolio</MudText>
            <MudSpacer />
            <MudButton>Log in</MudButton>
        </MudAppBar>
        <MudDrawer Variant="DrawerVariant.Persistent"
                   Docked="true"
                   Open="true"
                   Width="200px">
            <NavMenu />
        </MudDrawer>
        <MudMainContent Class="pt-16">
            @Body
        </MudMainContent>
    </MudLayout>
