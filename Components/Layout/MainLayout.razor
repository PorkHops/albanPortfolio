@using MudBlazor
@using MudBlazor.Services
@using MudBlazor.Components
@using albanPortfolio.Components.Utils

@inject IHttpContextAccessor _context

@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudPopoverProvider />

    <MudLayout>
        <MudAppBar Elevation="1" Color="Color.Surface" Style="background-color: #1E1E1E;">
            <MudContainer MaxWidth="MaxWidth.Large" Class="d-flex justify-content-center">
                <MudText Typo="Typo.h6">Alban's Portfolio</MudText>
            </MudContainer>
            <MudSpacer />
            <Contact Size="Size.Small" Justify="Justify.FlexStart" />
        </MudAppBar>
        <MudDrawer Variant="DrawerVariant.Persistent"
                    Docked="true"
                    Open="true"
                    ClipMode="@DrawerClipMode.Always"
                    Width="200px"
                    Elevation="2"
                    Color="Color.Dark"
                    Style="background-color: #121212;">
            <NavMenu />
        </MudDrawer>
        <MudMainContent Class="pt-16">
            @Body
        </MudMainContent>
    </MudLayout>

