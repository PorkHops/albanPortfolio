@page "/"
@using MudBlazor.Utilities
@using MudBlazor
@using System.Text.Json
@using System.IO
@using albanPortfolio.Components.Utils
@inject IWebHostEnvironment Environment

<PageTitle>Alban!</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <!-- Me Section :) -->
